---
import { Icon } from 'astro-icon/components';

export interface Props {
  text: string;
  url: string | URL;
  class?: string;
}

const { text, url, class: className = 'inline-block' } = Astro.props;
---

<div class={className}>
  <span class="align-super font-bold text-slate-500 dark:text-slate-400">Share:</span>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Threads Share"
    data-aw-social-share="threads"
    data-aw-url={url}
    data-aw-text={text}
  >
    <Icon
      name="tabler:brand-threads"
      class="size-6 text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    />
  </button>

  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Telegram Share"
    data-aw-social-share="telegram"
    data-aw-url={url}
    data-aw-text={text}
  >
    <Icon
      name="tabler:brand-telegram"
      class="size-6 text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    />
  </button>

  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="LINE Share"
    data-aw-social-share="line"
    data-aw-url={url}
    data-aw-text={text}
  >
    <Icon
      name="tabler:brand-line"
      class="size-6 text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    />
  </button>

  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Twitter Share"
    data-aw-social-share="twitter"
    data-aw-url={url}
    data-aw-text={text}
  >
    <Icon
      name="tabler:brand-x"
      class="size-6 text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    />
  </button>

  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Facebook Share"
    data-aw-social-share="facebook"
    data-aw-url={url}
    data-aw-text={text}
  >
    <Icon
      name="tabler:brand-facebook"
      class="size-6 text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    />
  </button>
</div>
